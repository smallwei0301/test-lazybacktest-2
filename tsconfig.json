{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2020"],
    "types": []
  },
  "include": ["types/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
